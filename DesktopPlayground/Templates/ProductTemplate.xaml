<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="ProductTemplate">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Name}" Foreground="#fafafa" FontSize="12" />
            <TextBlock Text=" - $" Foreground="#fafafa" FontSize="12" />
            <TextBlock Text="{Binding Price}" Foreground="#fafafa" FontSize="12" />
            <TextBlock Text=" (Qty. " Foreground="#fafafa" FontSize="12" />
            <TextBlock Text="{Binding Quantity}" Foreground="#fafafa" FontSize="12" />
            <TextBlock Text=")" Foreground="#fafafa" FontSize="12" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>